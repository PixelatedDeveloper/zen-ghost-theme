<header>
<div class="justify-content-start">
	<div class="top-div">
		<nav class="navbar navbar-expand-sm navbar-light" >
	{{#if @site.logo}}
		<div class="logo-fixed d-block d-sm-block d-md-block d-lg-block">
			<a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}'s logo" title="{{@site.title}}'s logo" class="logo-nav head-logo left" /></a>
		</div>
	{{else}}
		<a href="{{@site.url}}" class="navbar-brand headerurl">{{@site.title}}</a>
	{{/if}}
	
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
			<ul class="navbar-nav">      
				<!-- Loop through the navigation items -->
				{{#foreach navigation}}
				<li class="nav-item{{#if current}} active{{/if}}">
						<a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
				</li>
				{{/foreach}}
				<!-- End the loop -->
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						{{t "More"}}
					</a>
					<div class="dropdown-menu" aria-labelledby="navbarDropdown">
						{{#if @member}}
						<a class="nav-link dropdown-item" href="{{@site.url}}/#/portal/account">{{t "My Account"}}</a>
						<a class="nav-link dropdown-item" href="javascript:" data-members-signout>{{t "Sign-out"}}</a>
						{{else}}
						<a class="nav-link dropdown-item" href="{{@site.url}}/#/portal/signin">{{t "Sign-in"}}</a>
						{{/if}}
					</div>
				</li>
			</ul>
		</div>
	</nav>
	</div>
</div>
</header>



