<div class="row-featured d-none d-lg-flex row">
  {{#get "posts" limit="3" filter="featured:true" include="tags" order="published_at desc" as |featured| }}
  {{#foreach featured}}
  <div class="col-md-4">
    {{#if tags}}{{#primary_tag}}<div class="tag"><a href="/tag/{{slug}}" alt="{{name}}" title="{{name}}">{{name}}</a></div>{{/primary_tag}}{{/if}}
    <a href="{{url}}">
      <img class="d-block row-item-image" src="{{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "
        images/fallback-image.jpg"}}{{/if}}" alt="{{title}}" title="{{title}}">
    </a>
    
    <div class="small-post-wrap">
        <p class="featured-title text-truncate">
            {{title}}
        </p>
        <p class="post-options post-options-inside-wrap">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
        </p>
    </div>
  </div>
  {{/foreach}}
  {{/get}}
</div>